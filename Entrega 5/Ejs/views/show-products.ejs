<%- include('./partials/header')  %> 

<% if(productos.length>0) { %> 
    <div class="container">
        <h1>Tabla de Productos</h1>
    <table class="table table-hover">
        <tr class="table-success">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
    <% productos.forEach(item => { %>
        <tr>
            <td><%= item.name %></td>
            <td><%= item.price %></td>
            <td><img src=<%= item.thumbnail  %> width="50px"></td>
        </tr>
        
    <% }) %>
</table>
</div>
<% } else { %>
    <h1>No existen registros que mostrar</h1>
    <% } %>
    <div class="container">
        <a href="/" class="btn btn-success">Agregar nuevo Producto</a>
    </div> 

<%- include('./partials/footer')  %>     