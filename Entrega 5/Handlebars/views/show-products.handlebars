{{#if productos}}
    <div class="container">
        <h1>Tabla de Productos</h1>
    <table class="table table-hover">
        <tr class="table-success">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
{{#each productos}}        
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td><img src={{this.thumbnail}} width="50px"></td>
        </tr>
{{/each}}
</table>
</div>
{{else}}
    <h1>No existen registros que mostrar</h1>
{{/if}}
    <div class="container">
        <a href="/" class="btn btn-success">Agregar nuevo Producto</a>
    </div> 