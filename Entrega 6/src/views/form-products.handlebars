
<div class="container ">
<h1>Creación de Productos </h1>
        <form action="/productos" method="post">
            <label>Nombre:</label>
            <input name="name" />
            <label>Precio:</label>
            <input name="price" />
            <label>Thumbnail (url):</label>
            <input name="thumbnail" />
            <input type="submit" value="Agregar" class="btn btn-outline-success"/>     
          </form>
</div>
{{#if productos}}
    <div class="container">
        <h1>Tabla de Productos</h1>
    <table class="table table-hover">
        <tr class="table-success">
            <th>Nombre</th>
            <th>Precio</th>
            <th>Imagen</th>
        </tr>
{{#each productos}}        
        <tr>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td><img src={{this.thumbnail}} width="50px"></td>
        </tr>
{{/each}}
</table>
</div>
{{else}}
    <h1>No existen registros que mostrar</h1>
{{/if}}
<div class="container " >
<h1>Centro de Mensajes </h1>
     <form action="/chat" method="post" id="chatForm">
    <label>Correo Electrónico:</label>      
    <input name="userChat" id="userChat" type="email" required />
    <br>
    <br>
    <label>Mensaje:</label>  
    <input name="mensajesChat" id="mensajesChat" required />
    <button id="submit" type="submit" class="btn btn-outline-success">Enviar</button>
    <br>
    <br>
    </form>   
    <div id="chatHistory"></div>
            
</div>
